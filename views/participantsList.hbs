<link rel="stylesheet" href="/stylesheets/participantList.css">

<div class="container">
    <div class="row">
        <div class="col s12 card crdtop">
            <div class="card-content">
                <span class="card-title fltlft">Event Name: {{event.name}}</span>
                <span class="card-title fltrgt">Current Round: {{event.currentRound}}</span>
            </div>
            <div class="card-content">
                <table class="bordered record-table">
                    <thead>
                    <tr>
                        <th>Select</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                        <th>Round</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each event.participants }}
                        <tr class="click-row" data-id="{{@index}}">
                            <td class="valign-wrapper">
                                <input type="checkbox" class="myCheckbox filled-in"/>
                                <label for="myCheckbox"></label>
                            </td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{status}}</td>
                            <td>{{round}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="card-content">
                <div>
                    <a class="waves-effect waves-light btn" id="btn-submit1">Submit</a>
                    &nbsp;&nbsp;&nbsp;<span id="num-participants">0</span> Participants Selected
                </div>
            </div>
        </div>
    </div>
    <div id="modal"  class="modal">
        <div class="modal-content">
            <div class="row padzero">
                <div class="col s4 offset-s2">
                    <p>Date:</p> <input type="text" class="datepicker" id="date" required>
                </div>

                <div class="col s4">
                    <p>Time:</p> <input type="text" class="timepicker" id="time" required>
                </div>

            </div>
            <div class="row padzero">
                <div class="col s8 offset-s2">
                    <p>Venue:</p> <input type="text" id="venueInput" required>
                    <label for="venueInput"></label>
                </div>
            </div>
            <div class="row padzero">
                <div class="col s8 offset-s2">
                    <p>Remarks:</p> <input type="text" id="remark" required>
                    <label for="remark"></label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect  btn btn-submit-red" id="btn-submit2">Submit</a>
        </div>
    </div>

    <form method="post" action="/promote" hidden id="submitForm">
        <input type="hidden" name="idList" id="idList">
        <input type="hidden" name="dateTime" id="dateTime">
        <input type="hidden" name="venue" id="venue">
        <input type="hidden" name="remarks" id="remarks">
    </form>
</div>

<script src="/javascripts/participantList.js"></script>